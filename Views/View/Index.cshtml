@model List<DatabaseManager.Models.DatabaseInfo>
@{
    ViewBag.Title = "Databases";
}
<!-- Database Information -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Server</th>
            <th scope="col">Type</th>
            <th scope="col" style="width:50px;padding-left:0;"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count < 1)
        {
        <tr>
            <td>No databases found.</td>
            <td> </td>
            <td> </td>
            <td> </td>
        </tr>
        }
        else
        {
        for (int i = 0; i < Model.Count; i++)
        {
        <tr>
            <td><a href="~/View/Database/@Model[i].DatabaseID" class="text-dark"><u>@Model[i].Name</u></a></td>
            <td>@Model[i].Host.Hostname</td>
            <td>@Model[i].Host.Type @Model[i].Host.Version</td>
            <td class="text-right" style="width:50px;padding-left:0;"><button type="button" class="btn btn-outline-secondary btn-xs" onclick="location.href = '/View/Database/@Model[i].DatabaseID';">Edit</button></td>
        </tr>
        }
        }
    </tbody>
</table>
<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Servers", "View")'">Create New Database</button>
<p class="block float-right text-muted"><strong>Total Databases: @Model.Count</strong></p>
